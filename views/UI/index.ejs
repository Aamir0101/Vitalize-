        // Appointment button click handler
        document.querySelectorAll('.appointment-btn').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelector('.appointment').scrollIntoView({ behavior: 'smooth' });
            });
        });

        //service list click
        document.querySelector('.service').addEventListener('click', function() {
                document.querySelector('.services').scrollIntoView({ behavior: 'smooth' });
            });
        
        //Doctor list click
            document.querySelector('.doctor').addEventListener('click', function() {
                document.querySelector('.doctors').scrollIntoView({ behavior: 'smooth' });
            });

        //Contact List click
        document.querySelector('.contact').addEventListener('click', function() {
                document.querySelector('footer').scrollIntoView({ behavior: 'smooth' });
            });
    </script>
</body>
</html>